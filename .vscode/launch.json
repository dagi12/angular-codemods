{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Transform tutorial",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "program": "./node_modules/jscodeshift/bin/jscodeshift.sh",
      "args": [
        "-d",
        "-p",
        "-t",
        "${fileDirname}/${fileBasenameNoExtension}.ts",
        "${fileDirname}/${fileBasenameNoExtension}.input.js"
      ],
      "type": "pwa-node",
      "outputCapture": "std"
    },
    {
      "name": "Dynamic file transform",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "program": "./node_modules/jscodeshift/bin/jscodeshift.sh",
      "args": [
        "-d",
        "-p",
        "-t",
        "src/my-transform/directive-to-component.ts",
        "--extensions=ts",
        "--parser=ts",
        "${file}"
      ],
      "type": "pwa-node",
      "outputCapture": "std"
    },

    {
      "name": "Module transform",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "program": "./node_modules/jscodeshift/bin/jscodeshift.sh",
      "args": [
        "-d",
        "-p",
        "-t",
        "src/module-transform/index.ts",
        "--extensions=ts",
        "--parser=ts",
        "${file}"
      ],
      "type": "pwa-node",
      "outputCapture": "std"
    },
    {
      "name": "Directive transform",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "program": "./node_modules/jscodeshift/bin/jscodeshift.sh",
      "args": [
        "-d",
        "-p",
        "-t",
        "src/my-transform/directive-to-component.ts",
        "--extensions=ts",
        "--parser=ts",
        "src/my-transform/my-auto-complete/my-auto-complete.directive.ts"
      ],
      "type": "pwa-node",
      "outputCapture": "std"
    },
    {
      "name": "Launch via NPM",
      "request": "launch",
      "runtimeArgs": ["run-script", "debug"],
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    },
    {
      "name": "Launch Program",
      "type": "pwa-node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "program": "./node_modules/jscodeshift/bin/jscodeshift.sh",
      "args": ["-t", "./angular-module-exports/transformer.js", "${file}"]
    }
  ]
}
