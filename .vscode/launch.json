{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Transform tutorial",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "program": "./node_modules/jscodeshift/bin/jscodeshift.sh",
      "args": [
        "-d",
        "-p",
        "-t",
        "${fileDirname}/${fileBasenameNoExtension}.ts",
        "${fileDirname}/${fileBasenameNoExtension}.task.js",
        "${fileDirname}/${fileBasenameNoExtension}.solution.js"
      ],
      "outputCapture": "std"
    },
    {
      "name": "directive-transform",
      "request": "launch",
      "runtimeArgs": ["run-script", "directive-transform"],
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node",
      "outputCapture": "std"
    },
    {
      "name": "Launch via NPM",
      "request": "launch",
      "runtimeArgs": ["run-script", "debug"],
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    },
    {
      "name": "Launch Program",
      "type": "pwa-node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "program": "./node_modules/jscodeshift/bin/jscodeshift.sh",
      "args": ["-t", "./angular-module-exports/transformer.js", "${file}"]
    }
  ]
}
