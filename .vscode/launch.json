{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Decorator file transform",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "./node_modules/jscodeshift/bin/jscodeshift.sh",
      "args": [
        "-d",
        "-p",
        "-t",
        "src/decorator-transform/directive.ts",
        "--extensions=ts",
        "--parser=ts",
        "${file}"
      ],
      "type": "pwa-node",
      "outputCapture": "std"
    },
    {
      "name": "Single Module transform",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "./node_modules/jscodeshift/bin/jscodeshift.sh",
      "args": [
        "--fail-on-error",
        "-v",
        "1",
        "-d",
        "-p",
        "-t",
        "src/module-transform/index.ts",
        "--extensions=ts",
        "--parser=ts",
        "${file}"
      ],
      "type": "pwa-node",
      "outputCapture": "std"
    },
    {
      "name": "All module transform",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeArgs": [
        "run-script",
        "modules"
      ],
      "runtimeExecutable": "npm",
      "type": "pwa-node",
      "outputCapture": "std"
    },
    {
      "name": "Directive transform",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "./node_modules/jscodeshift/bin/jscodeshift.sh",
      "args": [
        "-p",
        "-t",
        "src/directive-transform/index.ts",
        "--extensions=ts",
        "--parser=ts",
        "${file}"
      ],
      "type": "pwa-node",
      "outputCapture": "std"
    },
    {
      "name": "Launch via NPM",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "debug"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    },
    {
      "name": "Launch Program",
      "type": "pwa-node",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "./node_modules/jscodeshift/bin/jscodeshift.sh",
      "args": [
        "-t",
        "./angular-module-exports/transformer.js",
        "${file}"
      ]
    }
  ]
}